<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange_50"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/screen_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="25sp"
        tools:text="Title"
        android:textColor="@color/black"
        android:background="@color/orange_100"/>
    <TextView
        android:id="@+id/title_alter_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        tools:text="Title"
        android:background="@color/orange_100"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/cover_image_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:srcCompat="@mipmap/icon_flower" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:id="@+id/date_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:gravity="center"
                    tools:text="2000"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/rate_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="10.0"
                    android:textSize="20sp"
                    android:paddingStart="60dp"
                    android:textColor="@color/black"
                    app:drawableTint="@color/orange_600"
                    app:drawableStartCompat="@drawable/ic_star_rate" />


            </LinearLayout>

            <TextView
                android:id="@+id/description_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/description"
                android:textColor="@color/black"
                android:background="@color/rose_50"/>

            <TextView
                android:id="@+id/description_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                tools:text="Description"
                android:textColor="@color/black"
                android:background="@color/rose_50"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>